<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script>
      const validateForm = ()=>{
        const dateValue = document.getElementById("date").value
        console.log(dateValue)
        if(new Date(dateValue)){
          document.getElementById("dateErrMsg").innerHTML = "* Enter valid date"
          return false
        }
        if(new Date(dateValue) <= new Date() ){
          document.getElementById("dateErrMsg").innerHTML = "* Cannot be less than today's date and time"
          return false
          
        }
        return true
        
      }
    </script>

  </head>
  <body style="padding: 24px">
    <h1 class="h1">Create todo</h1>

    

    <form
      class="row g-3 "
      id="createform"
      method="post"
      action="http://localhost:3030/api/v1/todo/create-todo"
      onsubmit="return validateForm()"
    >
      <div class="col-md-9">
        <label for="name" class="form-label">Todo name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          required
        />

      </div>
      <div class="col-sm">
        <label for="date" class="form-label">Date</label>
        <input
          type="datetime-local"
          class="form-control"
          id="date"
          value="date"
          name="date"
          required
        />
        <div id="dateErrMsg" style="color:red;">
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input
          type="text"
          class="form-control"
          id="description"
          name="description"
          required
        />
      </div>
      <div class="col-12">
        <button class="btn btn-primary" type="submi" >Save todo</button>
      </div>
    </form>
    <h1 class="h1">todos</h1>
    <table class="table">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Date</th>
        <th scope="col">time</th>
        <th scope="col" colspan="2">
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="inlineRadioOptions"
              id="inlineRadio1"
              value="option1"
            />
            <label class="form-check-label" for="inlineRadio1">Upcomming</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="inlineRadioOptions"
              id="inlineRadio2"
              value="option2"
            />
            <label class="form-check-label" for="inlineRadio1">Done</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="inlineRadioOptions"
              id="inlineRadio3"
              value="option3"
              checked
            />
            <label class="form-check-label" for="inlineRadio1">All</label>
          </div>
        </th>
      </tr>
      {{#each todosData}}
        <tr>
          <th scope="row">{{@index}}</th>
          <td>{{name}}</td>
          <td>{{description}}</td>
          <td>{{date}}</td>
          <td>time</td>
          <td>

            <form
              action="http://localhost:3030/api/v1/todo/get-todo"
              method="get"
            >
              <button
                class="btn btn-outline-primary"
                name="_id"
                type="submit"
                value={{_id}}
              >
                Edit
              </button>
            </form>
          </td>
          <td>
            <form
              action="http://localhost:3030/api/v1/todo/delete/{{_id}}"
              method="post"
            >
              <button class="btn btn-outline-danger" type="submit">
                Delete
              </button>
            </form>

          </td>
          <td>
          </td>
        </tr>
      {{/each}}

    </table>

  </body>
</html>